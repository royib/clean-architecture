@model University.Core.Domain.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
<script>

    function save() {
        document.forms[0].submit();
    }

</script>


<h3>Edit Student Details</h3>
<div class="form-horizontal">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.StudentID)

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-3 control-label">@Html.LabelFor(model => model.LastName)</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-3 control-label">@Html.LabelFor(model => model.FirstMidName)</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.FirstMidName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-3 control-label">@Html.LabelFor(model => model.EnrollmentDate)</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.EnrollmentDate, new { @class = "form-control" })
        </div>
    </div>   
   

}
    </div>
 @section fotter {
     <button type="submit" class="btn btn-primary" onclick="save()">Save</button>     
 }  




